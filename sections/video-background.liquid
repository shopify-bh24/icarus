{% if section.settings.background_video != blank %}
  <div class="video-container">
    <video autoplay loop muted playsinline>
      <source src="{{ section.settings.background_video }}" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  </div>
{% endif %}

<style>
  .video-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
  }
  .video-container video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>

{% schema %}
{
  "name": "Video Background",
  "settings": [
    {
      "type": "text",
      "id": "background_video",
      "label": "Video URL",
      "info": "Upload your video in Shopify → Content → Files and paste the URL here."
    }
  ],
  "presets": [
    {
      "name": "Video Background"
    }
  ]
}
{% endschema %}
